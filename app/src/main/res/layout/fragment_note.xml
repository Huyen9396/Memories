<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/dimens_5dp"
            android:layout_height="0dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/date_show"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/time_show"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/address_show"
                android:textColor="#000"
                android:textSize="@dimen/text_size_15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5">

            <TextView
                android:id="@+id/title_show"
                android:textSize="20sp"
                android:layout_margin="@dimen/dimens_10dp"
                android:textColor="#ff007b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.5">

            <TextView
                android:id="@+id/content_show"
                android:textSize="20sp"
                android:layout_margin="@dimen/dimens_10dp"
                android:textColor="#040046"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </ScrollView>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_edit"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/dimens_10dp"
        app:backgroundTint="#0ff"
        android:src="@drawable/icon_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




</FrameLayout>